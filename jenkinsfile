pipeline {
    agent {
        label "SLAVE"
    }
    stages {
        stage('seeing artifacts') {
            steps {
                sh '''
                zip login.zip *
                '''
            }
        }
        stage ('Uploading artifacts to nexus') {
            steps {
                sh '''
                curl -v -u admin:zelar123 --upload-file login.zip http://172.31.0.171:8081/repository/login/login.zip
                '''

            }
        }
    }
}